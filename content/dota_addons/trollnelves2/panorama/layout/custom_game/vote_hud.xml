<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/vote_hud.css" />
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/play.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/vote_hud.js" />
	</scripts>
	<Panel hittest="false" class="GameSetup">

		<!-- Map name -->
		<Panel id="MapInfo">
			<Label id="MapInfoLabel" text="#LoadingScreenMapInfo"/>
		</Panel>

		<Panel id="CountdownAndChoiceWrapper">

			 <Panel id="Settings">
		        <Label id="TrollSelection" class='SettingHeader' text="Do you want to be the troll?"/>
				<Panel class = "vote_buttons">
					<RadioButton group="team" onactivate="ChooseTeam('troll')" id="team1" text="Yes"/>
					<RadioButton group="team" onactivate="ChooseTeam('elf')" id="team2" text="No"/>
				</Panel>
		    </Panel>
			<!--Countdown timer-->
			<Panel id="StartGameCountdownTimer">
				<Image id="TimerBg" src="file://{images}/status_icons/timer_background.psd" />
				<Image id="TimerRing" src="file://{images}/status_icons/timer_ring.psd" />
				<Label id="TeamSelectTimer" text="#custom_game_team_select_timer" />
			</Panel>
		</Panel>
		    
	</Panel>
</root>